<UserControl x:Class="trello.Views.Cards.AddChecklistView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <StackPanel Background="{StaticResource PhoneChromeBrush}">
        <TextBlock Style="{StaticResource PhoneTextLargeStyle}">Create a check list</TextBlock>
        <TextBlock Style="{StaticResource PhoneTextNormalStyle}">Enter a name for this check list</TextBlock>
        <TextBox Name="Name">
			<TextBox.InputScope>
				<InputScope>
					<InputScopeName NameValue="Text" />
				</InputScope>
			</TextBox.InputScope>
		</TextBox>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width=".5*" />
            </Grid.ColumnDefinitions>
            <Button Name="Accept" Content="confirm" BorderBrush="{StaticResource PhoneAccentBrush}" />
            <Button Name="TryClose" Content="cancel" Grid.Column="1" />
        </Grid>
	</StackPanel>

</UserControl>