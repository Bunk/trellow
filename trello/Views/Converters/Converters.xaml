<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converters="clr-namespace:trello.Views.Converters"
	xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit">
	
	<converters:VisibilityConverter x:Key="VisibilityConverter" />
	<converters:VisibilityConverter x:Key="InvertedVisibilityConverter" Invert="True" />
	<converters:BitmapImageConverter x:Key="BitmapConverter" />
	<converters:CaseConverter x:Key="CaseConverter" />
	<converters:BytesStringConverter x:Key="BytesStringConverter" />
	<converters:DueDateColorConverter x:Key="DueDateConverter" DefaultBrush="{StaticResource PhoneAccentBrush}" />
	<converters:LabelColorConverter x:Key="LabelColorConverter" />
    <converters:MarkdownConverter x:Key="MarkdownConverter" />
    <converters:BrowserBehavior x:Key="BrowserBehavior" />
	<toolkit:RelativeTimeConverter x:Key="RelativeTimeConverter" />

</ResourceDictionary>