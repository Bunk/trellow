<Application
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:trello" xmlns:SampleData="clr-namespace:Expression.Blend.SampleData.SampleDataSource" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    x:Class="trello.App"
    >

    <!--Application Resources-->
    <Application.Resources>
    	<ResourceDictionary>
    		<ResourceDictionary.MergedDictionaries>
    			<ResourceDictionary Source="Views/Styles/StyleResources.xaml"/>
    			<ResourceDictionary Source="Views/Converters/Converters.xaml"/>
    		</ResourceDictionary.MergedDictionaries>

    		<SampleData:SampleDataSource x:Key="SampleDataSource" d:IsDataSource="True"/>

    		<app:Bootstrapper x:Key="Bootstrapper" />
    	</ResourceDictionary>
    </Application.Resources>

</Application>